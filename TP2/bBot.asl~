//Create agent
!newLive.
+!newLive <- enter.

//Keep it in life
+!goToFlag: flag(red, X, Y) & not target(_,_) <- target(X,Y); !goToFlag.



+target(XF, YF) : +myPos(X, Y)& X<XF <- right.
+target(XF, YF) : +myPos(X, Y)& X>XF <- left.
+target(XF, YF) : +myPos(X, Y)& Y<YF <- up.
+target(XF, YF) : +myPos(X, Y)& Y>YF <- down.
+target(XF, YF) : +myPos(X, Y)& Y==YF& X==XF <- down.
